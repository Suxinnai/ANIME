---
import BaseLayout from "../layouts/BaseLayout.astro";
import { MessageSquare, Heart, Sparkles } from "lucide-react";
---

<BaseLayout
    title="留言板 | Guestbook"
    description="留下你的足迹，开启一场不期而遇的对话。"
>
    <div class="container-custom py-10 relative">
        <!-- Decoration Background -->
        <div
            class="absolute top-0 right-0 w-64 h-64 bg-anime-pink/5 blur-3xl -z-10 rounded-full"
        >
        </div>
        <div
            class="absolute bottom-20 left-0 w-80 h-80 bg-anime-blue/5 blur-3xl -z-10 rounded-full"
        >
        </div>

        <header class="mb-12 relative">
            <div
                class="inline-flex items-center gap-2 px-3 py-1 bg-anime-pink/10 text-anime-pink rounded-full text-xs font-bold mb-4 border border-anime-pink/20"
            >
                <MessageSquare className="w-3.5 h-3.5" />
                <span>GUESTBOOK</span>
            </div>
            <h1
                class="text-4xl md:text-5xl font-display font-black text-anime-dark dark:text-white mb-4 tracking-tight"
            >
                冒险者的<span class="text-anime-blue">留言板</span>
            </h1>
            <p
                class="text-anime-dark/60 dark:text-gray-400 max-w-2xl text-lg leading-relaxed"
            >
                在这里留下你的足迹，无论是吐槽、鼓励、还是简单的"打卡"，都会成为这个异世界最珍贵的存档。✨
            </p>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
            <!-- Left: Message Area -->
            <div class="lg:col-span-2 space-y-8">
                <div
                    class="bg-white dark:bg-[#1a1a1a] rounded-[2rem] border-2 border-anime-dark dark:border-white/10 p-4 md:p-8 shadow-comic dark:shadow-none"
                >
                    <!-- Giscus Comments -->
                    <div id="giscus-container" class="giscus"></div>
                </div>
            </div>

            <!-- Right: Rules & Stats -->
            <div class="space-y-6">
                <!-- Rules Card -->
                <div
                    class="bg-anime-yellow/10 border-2 border-anime-dark dark:border-anime-yellow/20 rounded-2xl p-6 relative overflow-hidden group"
                >
                    <div
                        class="absolute top-0 right-0 p-3 opacity-10 group-hover:scale-110 transition-transform"
                    >
                        <Sparkles
                            className="w-12 h-12 text-anime-dark dark:text-anime-yellow"
                        />
                    </div>
                    <h3
                        class="font-display font-bold text-lg text-anime-dark dark:text-white mb-4 flex items-center gap-2"
                    >
                        留言须知
                    </h3>
                    <ul
                        class="space-y-3 text-sm text-anime-dark/70 dark:text-gray-300 font-medium"
                    >
                        <li class="flex items-start gap-2">
                            <span class="text-anime-pink">#</span>
                            <span>使用 GitHub 账号登录后即可留言。</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-anime-pink">#</span>
                            <span>支持 Markdown 语法，可以添加表情回应。</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <span class="text-anime-pink">#</span>
                            <span>请保持礼貌与友善，共建美好社区。</span>
                        </li>
                    </ul>
                </div>

                <!-- Connect Card -->
                <div
                    class="bg-white dark:bg-white/5 border-2 border-anime-dark dark:border-white/10 rounded-2xl p-6 shadow-comic-sm dark:shadow-none"
                >
                    <h3
                        class="font-display font-bold text-lg text-anime-dark dark:text-white mb-4 flex items-center gap-2"
                    >
                        关于本站
                        <Heart
                            className="w-4 h-4 text-anime-pink fill-current"
                        />
                    </h3>
                    <div class="space-y-4">
                        <div
                            class="p-4 bg-anime-pink/5 rounded-xl border border-anime-pink/20"
                        >
                            <p
                                class="text-sm text-anime-dark/80 dark:text-gray-300 leading-relaxed"
                            >
                                欢迎来到我的<span
                                    class="font-bold text-anime-pink"
                                    >异世界存档点</span
                                >！这里每一条留言都是一段珍贵的记忆。如果你也喜欢二次元，不妨留下你的
                                ID 吧！✨
                            </p>
                        </div>

                        <div class="grid grid-cols-2 gap-3">
                            <div
                                class="p-2 bg-gray-50 dark:bg-white/5 rounded-lg text-center"
                            >
                                <span class="block text-xs text-gray-400 mb-1"
                                    >管理员</span
                                >
                                <span
                                    class="font-bold text-anime-dark dark:text-white"
                                    >Suxinnai</span
                                >
                            </div>
                            <div
                                class="p-2 bg-gray-50 dark:bg-white/5 rounded-lg text-center"
                            >
                                <span class="block text-xs text-gray-400 mb-1"
                                    >坐标</span
                                >
                                <span class="font-bold text-anime-blue"
                                    >异世界</span
                                >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Decoration Image -->
                <div
                    class="relative group rounded-3xl overflow-hidden border-2 border-anime-dark shadow-comic dark:shadow-none transform rotate-1 hover:rotate-0 transition-transform duration-500"
                >
                    <img
                        src="/车站2.png"
                        alt="Decoration"
                        class="w-full h-auto"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-anime-dark/60 to-transparent"
                    >
                    </div>
                    <div class="absolute bottom-4 left-4 right-4 text-center">
                        <p class="text-xs text-white/80 font-medium italic">
                            "每一次相遇，都是久别重逢。"
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    // 动态加载 Giscus 并根据主题切换
    function loadGiscus() {
        const container = document.getElementById("giscus-container");
        if (!container) return;

        // 清空容器
        container.innerHTML = "";

        // 检测当前主题
        const isDarkMode = document.documentElement.classList.contains("dark");
        const theme = isDarkMode ? "dark" : "light";

        // 构建自定义 CSS 的绝对路径
        // 注意：在 localhost 本地运行时，Giscus 无法读取此文件，将回退到默认样式
        // 部署到公网 (Vercel) 后，自定义粉色主题将自动生效
        const customThemeUrl = `${window.location.origin}/giscus.css`;

        // 创建 script 标签
        const script = document.createElement("script");
        script.src = "https://giscus.app/client.js";
        script.setAttribute("data-repo", "Suxinnai/ANIME");
        script.setAttribute("data-repo-id", "R_kgDOQrIARw");
        script.setAttribute("data-category", "Announcements");
        script.setAttribute("data-category-id", "DIC_kwDOQrIAR84C0ClQ");
        script.setAttribute("data-mapping", "pathname");
        script.setAttribute("data-strict", "0");
        script.setAttribute("data-reactions-enabled", "1");
        script.setAttribute("data-emit-metadata", "0");
        script.setAttribute("data-input-position", "top");
        // 使用自定义主题 URL
        script.setAttribute("data-theme", customThemeUrl);
        script.setAttribute("data-lang", "zh-CN");
        script.setAttribute("crossorigin", "anonymous");
        script.async = true;

        container.appendChild(script);
    }

    // 初始加载
    loadGiscus();

    // 监听主题切换 (此处为了简化，暂时 unified 使用自定义主题，或者您可以准备 giscus-dark.css)
    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (mutation.attributeName === "class") {
                const customThemeUrl = `${window.location.origin}/giscus.css`;
                const iframe = document.querySelector("iframe.giscus-frame");
                if (iframe && iframe instanceof HTMLIFrameElement) {
                    iframe.contentWindow?.postMessage(
                        { giscus: { setConfig: { theme: customThemeUrl } } },
                        "https://giscus.app",
                    );
                }
            }
        });
    });

    observer.observe(document.documentElement, { attributes: true });
</script>

<style>
    .container-custom {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Giscus 容器样式优化 */
    .giscus {
        min-height: 300px;
    }

    .giscus-frame {
        width: 100% !important;
    }
</style>
